<%- include("../partials/header") %>


<div class="container">
    <div class="row mt-5 justify-content-center">
        <form action="/gateway" method="post" class="col-md-8 col-10">
			<div class="form-group">
				<label for="id">Gateway ID</label>
				<input class="form-control" type="text" name="id" id="id">
			</div>
            <div class="form-group">
				<label for="name">Gateway name</label>
				<input class="form-control" type="text" name="name" id="name">
			</div>
            <div class="form-group">
				<label for="country_code">Country code</label>
				<input class="form-control" type="text" name="country_code" id="country_code">
			</div>
            <div class="form-group">
                <label for="frequency_plan">Frequency plan</label>
				<input class="form-control" type="text" name="frequency_plan" id="frequency_plan">
			</div>
            <div class="form-group">
                <label for="latitude">Latitude</label>
				<input class="form-control" type="number" step="any" name="latitude" id="latitude">
			</div>
            <div class="form-group">
                <label for="longitude">Longitude</label>
				<input class="form-control" type="number" step="any" name="longitude" id="longitude">
			</div>
            <div class="form-group">
                <label for="altitude">Altitude</label>
				<input class="form-control" type="number" step="any" name="altitude" id="altitude">
			</div>
            <div class="form-check">
                <input class="form-check-input" value="true" type="checkbox" name="online" id="online">
                <label class="form-check-label" for="online">Online status</label>
            </div>
            <button type="submit" id="submit" class="mt-3 btn btn-primary">Submit</button>
        </form>
    </div>
</div>


<%- include("../partials/footer") %>
